<Window x:Class="KeyLogger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" ResizeMode="NoResize"
        Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <ScrollViewer BorderThickness="1,1,1,2">
            <TextBox x:Name="txtBlock" TextWrapping="Wrap" IsReadOnly="True" FontSize="15" AcceptsReturn="True" AcceptsTab="True" Margin="3"/>
        </ScrollViewer>
    </Grid>
</Window>
